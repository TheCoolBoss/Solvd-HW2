<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="InstitutionMap.xml">
    <select id="getInstitutionById" parameterType="int" resultType="hashmap">
        select * from institutions where institutionId = #{id}
    </select>

    <delete id="deleteInstitution" parameterType="int">
        delete from institutions where institutionId = #{institutionId}
    </delete>
</mapper>