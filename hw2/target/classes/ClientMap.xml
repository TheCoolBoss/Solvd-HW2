<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ClientMap.xml">
    <select id="getClientByTypeId" parameterType="int" resultType="com.solvd.hw2.mybatis.models.MBClient">
        select clientId, clientName, clientTypeId from clients where clientTypeId = #{id}
    </select>

    <select id="getClientById" parameterType="int" resultType="com.solvd.hw2.mybatis.models.MBClient">
        select clientId, clientName, clientTypeId from clients where clientId = #{id}
    </select>

    <insert id="insertClient" parameterType="com.solvd.hw2.mybatis.models.MBClient">
        insert into clients (clientName, clientTypeId) values(#{clientName}, #{clientTypeId})
    </insert>

    <update id="updateClient" parameterType="com.solvd.hw2.mybatis.models.MBClient">
        update clients set clientName = #{clientName}, clientTypeId = #{clientTypeId} where clientId = #{clientId}
    </update>

    <delete id="deleteClient" parameterType="int">
        delete from clients where clientId = #{clientId}
    </delete>
</mapper>




