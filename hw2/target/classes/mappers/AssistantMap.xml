<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="AssistantMap.xml">
    <select id="getAssistantById" parameterType="int" resultType="com.solvd.hw2.models.Assistant">
        select * from assistants where assistantId = #{id}
    </select>

    <delete id="deleteAssistant" parameterType="int">
        delete from assistants where assistantId = #{assistantId}
    </delete>
</mapper>